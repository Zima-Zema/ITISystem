       @Html.LabelFor(a => a.BirthDate, new { @class = "form-group" })
    </div>
    <div class="col-lg-12">
     @*   @Html.TextBoxFor(a => a.BirthDate, new { @class = "form-group" })*@
       @*@Html.TextBoxFor(a => a.BirthDate, new { Value = Model.BirthDate.ToString("MM-dd-yyyy"), id = "MySuperId" });*@
        @Html.EditorFor(a => a.BirthDate, new { @type = "date" }) 
