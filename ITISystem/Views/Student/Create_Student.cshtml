@using ITISystem.Models;
@model Student
@{
    ViewBag.Title = "Create_Std";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Student</h2>
@using (Html.BeginForm("Create_Student", "Student", FormMethod.Post, "novalidate"))
{
    if(ViewData["message"]!=null)
    {
        <div>This Email Exists Before!!!</div>
    }
    <div class="col-lg-12">
        @Html.HiddenFor(a => a.Student_Id, new { @class = "form-group" })
    </div>

    <div class="col-lg-12">
        @Html.LabelFor(a => a.FirstName, new { @class = "form-group" })
    </div>
    <div class="col-lg-12">
        @Html.EditorFor(model => model.FirstName, new { @class = "form-group" })
        @Html.ValidationMessageFor(a => a.FirstName)
    </div>

    <div class="col-lg-12">
        @Html.LabelFor(a => a.LastName, new { @class = "form-group" })
    </div>
    <div class="col-lg-12">
        @Html.EditorFor(model => model.LastName, new { @class = "form-group" })
        @Html.ValidationMessageFor(a => a.LastName)
    </div>

