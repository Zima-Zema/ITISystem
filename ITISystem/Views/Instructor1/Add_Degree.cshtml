
@using ITISystem.Models;
@model Std_Crs_Instr
@{
    ViewBag.Title = "Add_Degree";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add_Degree</h2>
<h2>Courses</h2>

@using (Html.BeginForm("Add_Degree", "Instructor1", FormMethod.Post, "novalidate"))
{
    <div class="col-lg-12">      
        @Html.DropDownListFor(a => a.Course_key, ViewBag.cors as SelectList,"Select Course", new { @class = "btn btn-default" })
    </div>
    <br /><br /><br /><br />

<div class="col-lg-12">
    <h2>Students</h2>
      @Html.DropDownListFor(a => a.Student_key, ViewBag.stds as SelectList,"Select Student", new { @class = "btn btn-default" })
</div>
<br /><br /><br /><br />

    <div class="col-lg-12" >        
            @Html.LabelFor(a => a.Labs_Grade, new { @class = "form-group" })
            @Html.EditorFor(model => model.Labs_Grade, new { @class = "form-control" })      
    </div>
    <br /><br />
    <div>
        <input type="submit" value="Add" class="btn btn-success col-md-3 " />
    </div>
}
