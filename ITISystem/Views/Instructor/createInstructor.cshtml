@model ITISystem.Models.Instructor

@{
    ViewBag.Title = "createInstructor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head></head>
<body>
    <h2>New Instructor</h2>

    <br/>
    <br/>

    <form method="post" action="Instructor/createInstructor" novalidate="novalidate">
       
         
                    <div class="form-group">


                        @Html.DisplayNameFor(model => model.Name)
                        @Html.EditorFor(model => model.Name, new { @class = "form-control col-lg-8" })
               
                </div>
         
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.BirthDate)
                    @Html.EditorFor(model => model.BirthDate, new { @class = "form-control col-lg-88" })
                </div>
           
                <div class="form-group">

                    @Html.DisplayNameFor(model => model.Degree)
                    @Html.EditorFor(model => model.Degree, new { @class = "form-control col-lg-8" })
                </div>
            
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Graduation_Year)
                    @Html.EditorFor(model => model.Graduation_Year, new { @class = "form-control col-lg-4col-lg-offset-8" })
                </div>
         


                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Work_Status)
                    @Html.EditorFor(model => model.Work_Status, new { @class = "form-control col-lg-4 col-lg-offset-8" })
                </div>
        <div class="col-lg-5 col-lg-offset-4">
           @Html.ActionLink("Add", "createInstructor") 
        </div>



</form>
</body>
</html>

