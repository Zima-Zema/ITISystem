@model IEnumerable<ITISystem.Models.Course>
  
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>

</head>
<body>
    <div id="div1">
        <br />
        <br />
        <br />
        <table class="table table-bordered table-hover table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lec_Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lab_Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>
                    OPerations
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lec_Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lab_Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Ajax.ActionLink("Edit","EditCourse","Course",new { Id=item.Course_Id},new AjaxOptions()
                   {
                       UpdateTargetId="div2",
                       InsertionMode=InsertionMode.Replace,
                       HttpMethod="Get",
                       OnSuccess="myfun2()"
                   })
                        |
                        @Ajax.ActionLink("Delete", "DeleteCourse", "Course", new { Id = item.Course_Id }, new AjaxOptions()
                      {
                          UpdateTargetId = "div3",
                          InsertionMode = InsertionMode.Replace,
                          HttpMethod = "Get",
                          OnSuccess = "myfun3()"
                      })
                        
                       @*@Ajax.ActionLink("Delete","DeleteCourse", "Course", new { Id = item.Course_Id })*@
                       
                          
                    </td>
                </tr>
            }
        </table>
    </div>
    <div>
        @Html.ActionLink("AddCourse", "Addcourse")
    </div>
    <div id="div2" class="modal">

    </div>
    <div id="div3" class="modal">
    

    </div>

   
    <script>

        function myfun2()
        {
            $("#div2").modal("toggle");
        }
        function myfun3() {
            $("#div3").modal("toggle");
        }
    </script>
</body>
</html>


