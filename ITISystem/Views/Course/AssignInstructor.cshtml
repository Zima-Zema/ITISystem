@using ITISystem.Models;
@model Department
@{
    ViewBag.Title = "AssignInstructor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AssignInstructor</h2>
<div class="col-lg-12">
   @Html.LabelFor(a=>a.Department_Id, "Department", new { @class = "form-group" })
    @Html.DropDownListFor(a => a.Department_Id, ViewBag.depts as SelectList,"Select Department", new { @class = "btn btn-default" })
</div>
    <br /><br /><br /><br />


<div class="col-lg-12" id="course">
</div>
