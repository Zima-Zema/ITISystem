@using ITISystem.Models;
@model Department
@{
    ViewBag.Title = "crs_dept";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row form-group">
    <div class="col-md-12">
     <div class="input-group">
         <form method="post" action="/Course/Courses">

             <br />
             <br />
             <br />
             <br />

             @Html.DropDownListFor(a => a.Department_Id, ViewBag.dpts as SelectList, new { @class = "btn btn-primary" })
             
             <div id="div1">

             </div>
         
             <div class="form-group">
                 <div class="col-md-offest">
                     <input type="submit" value="Add Course to this Department" class="btn btn-primary" />
                 </div>
             </div>
             </form>
</div>
    </div>

</div>
@section scripts
{
    <script>
        $(function () {
            $("#Department_Id").change(function (event) {
                //alert($(this).val());
                $("#div1").load("/course/Courses/" + $(this).val());
              
                    
            })

        })
    </script>
}
