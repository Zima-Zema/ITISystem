@using ITISystem.Models;
@model Instructor
@{
    ViewBag.Title = "crs_ins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row form-group">
    <div class="col-md-12">
        <div class="input-group">
            <form method="post" action="/Course/Courses">

                <br />
                <br />
                <br />
                <br />

                @Html.DropDownListFor(a => a.Instructor_Id, ViewBag.dpts as SelectList, new { @class = "btn btn-primary" })

                <div id="div1">

                </div>

                @*<div class="form-group">
                    <div class="col-md-offest">
                        <input type="submit" value="" class="btn btn-primary" />
                    </div>
                </div>*@
            </form>
        </div>
    </div>

</div>

@section scripts
{
    <script>
        $(function () {
            $("#Instructor_Id").change(function (event) {
               // alert($(this).val());
                $("#div1").load("/course/ins_courses/" + $(this).val());


            })

        })
    </script>
}

